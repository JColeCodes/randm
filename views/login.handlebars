  <div class="logo">
    <img src="/assets/images/logo-dark.svg" alt="randm logo" />
  </div>
  <div class="forms">
    <form class="login-form">
      <div>
        <label for="email-login">Email:</label>
        <input type="text" id="email-login" />
      </div>
      <div>
