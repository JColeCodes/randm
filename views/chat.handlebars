<div class="logged-in">
  <header>
    <div class="logo">
        <img src="/assets/images/logo-light.svg" alt="randm logo" />
      </div>
      <div class="welcome-info">
        {{#with userLatest.currentUser}}
          Hello, {{first_name}}! 
          <i class="fa-solid fa-circle-user"></i>
          {{/with}}
      </div>
  </header>

<main>
  <div class="recent-chat">
      <ul>
        {{#each userLatest.latestChat}}
        <li>
          <h3 class="name">{{first_name}} {{last_name}}</h3>
          <span class="latest-message">
            {{latestMessage}}
            </span>
        </li>
        {{/each}}
      </ul>
  </div>

  <div class="current-chat">
    {{#if chatHome}}
    <div class="chat-home">
      This is the chat's homepage!
      <button>Randomize a new chat</button>
    </div>
    {{else}}
    <div class="user-info">
      <p class="in-chat">You're in a chat with</p>
      {{#each messages}}
      {{#if @first}}
      <h2 class="chatter-name">{{user.first_name}} {{user.last_name}}</h2>
      <p class="chatter-info">{{user.pronouns}}, {{user.gender}}, {{user.sexual_preference}}</p>
      <p class="chatter-bio">{{user.bio}}</p>
      {{/if}}
      {{/each}}
    </div>
    <div class="messages">
      <ol>
        {{#each messages}}
        <li class="{{get_chat_class sender_id ../userLatest.currentUser.id}}">
          <div class="message">{{message_text}}</div>
          <p class="sent-time">{{created_at}}</p>
        </li>
        {{/each}}
      </ol>
    </div>

  <form class="send-message">
    <input type="text" id="message"/>
    <button type="submit">Send</button>
  </form>
    {{/if}}
  </div>
</main>