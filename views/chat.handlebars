<div class="logged-in">
  <header>
    <div class="logo">
        <img src="./assets/images/logo-light.svg" alt="randm logo" />
      </div>
      <div class="welcome-info">
          Hello, {{first_name}}! 
          <i class="fa-solid fa-circle-user"></i>
      </div>
  </header>
  <div class="recent-chat">
    <ul>
      <li>
        <h3 class="name">{{first_name}} {{last_name}}</h3>
        <span class="latest-message">{{}}</span>
      </li>
      <li class="selected">
        <h3 class="name">{{first_name}} {{last_name}}</h3>
        <span class="latest-message"></span>
      </li>
      <li>
        <h3 class="name">{{first_name}} {{last_name}}</h3>
        <span class="latest-message">{{}}</span>
      </li>
    </ul>
  </div>
  <div class="current-chat">
    <div class="user-info">
      <p class="in-chat">You're in a chat with</p>
      <h2 class="chatter-name">{{first_name}} {{last_name}}</h2>
      <p class="chatter-info">{{birthday}}, {{gender}}, {{sexual_preference}}</p>
      <p class="chatter-bio">{{bio}}</p>
    </div>
  </div>
  <div class="messages">
    <ol>
      <li class="received">
        <div class="message"></div>
        <p class="sent-time"></p>
      </li>
      <li class="received">
        <div class="message"></div>
        <p class="sent-time"></p>
      </li>
      <li class="sent">
        <div class="message"></div>
        <p class="sent-time"></p>
      </li>
      <li class="received">
        <div class="message"></div>
        <p class="sent-time"></p>
      </li>
      <li class="sent">
        <div class="message"></div>
        <p class="sent-time"></p>
      </li>
    </ol>
  </div>
</div>

<form class="send-message">
  <input type="text" id="message"/>
  <button type="submit">Send</button>
</form>